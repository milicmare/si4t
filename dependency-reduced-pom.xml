<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.si4t</groupId>
  <artifactId>si4t-elastic</artifactId>
  <version>1.0</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.5.1</version>
        <inherited>true</inherited>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <resource>META-INF/services/org.apache.lucene.codecs.Codec</resource>
                </transformer>
                <transformer>
                  <resource>META-INF/services/org.apache.lucene.codecs.DocValuesFormat</resource>
                </transformer>
                <transformer>
                  <resource>META-INF/services/org.apache.lucene.codecs.PostingsFormat</resource>
                </transformer>
              </transformers>
              <shadedArtifactAttached>true</shadedArtifactAttached>
              <shadedClassifierName>complete</shadedClassifierName>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>install</id>
            <phase>install</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.basedir}/lib</outputDirectory>
              <excludeGroupIds>com.tridion,org.slf4j,org.apache,commons-io,commons-codec,commons-logging</excludeGroupIds>
            </configuration>
          </execution>
          <execution>
            <id>package</id>
            <phase>package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.basedir}/lib</outputDirectory>
              <excludeGroupIds>com.tridion,org.slf4j,org.apache,commons-io,commons-codec,commons-logging</excludeGroupIds>
            </configuration>
          </execution>
          <execution>
            <id>compile</id>
            <phase>compile</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.basedir}/lib</outputDirectory>
              <excludeGroupIds>com.tridion,org.slf4j,commons-io,commons-codec,commons-logging</excludeGroupIds>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>com.tridion</groupId>
      <artifactId>udp-common-config-legacy</artifactId>
      <version>11.1.0-1099</version>
      <scope>system</scope>
      <systemPath>${pom.basedir}/lib/udp-common-config-legacy-11.1.0-1099.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>com.tridion</groupId>
      <artifactId>udp-common-util</artifactId>
      <version>11.1.0-1099</version>
      <scope>system</scope>
      <systemPath>${pom.basedir}/lib/udp-common-util-11.1.0-1099.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>org.si4t</groupId>
      <artifactId>si4t-se</artifactId>
      <version>${si4t.version}</version>
      <scope>system</scope>
      <systemPath>${pom.basedir}/lib/si4t-se-1.2.jar</systemPath>
    </dependency>
  </dependencies>
  <properties>
    <si4t.version>1.2</si4t.version>
    <okhttp.version>3.10.0</okhttp.version>
    <slf4j.version>1.6.2</slf4j.version>
    <gson.version>2.8.6</gson.version>
    <jacksondb.version>2.10.3</jacksondb.version>
    <elastic.version>7.17.4</elastic.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
  </properties>
</project>
